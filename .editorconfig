# Editor configuration, see http://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# YAML files
[*.yml]
indent_size = 2
indent_style = space

# PHP files
[*.php]
indent_size = 4

# JavaScript files
[*.js]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

# Exclude certain folders and files
[**/tests/**]
exclude = true

[**/node_modules/**]
exclude = true

[**/vendor/**]
exclude = true

[.dist]
exclude = true
